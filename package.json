{
  "name": "meanwhile",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "VITE_USE_LOCAL_API=true vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "biome format --write src/",
    "worker": "pnpm --filter meanwhile-config-editor dev",
    "worker:deploy": "pnpm --filter meanwhile-config-editor deploy",
    "worker:test": "pnpm --filter meanwhile-config-editor test",
    "worker:setup": "pnpm --filter meanwhile-config-editor setup-secrets"
  },
  "dependencies": {
    "@preact/signals": "^2.5.1",
    "ios-haptics": "^0.1.4",
    "preact": "^10.27.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^24.10.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17"
  }
}
